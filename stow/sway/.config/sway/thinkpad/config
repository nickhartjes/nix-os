output * background ~/.wallpapers/4k-minimalist-dark-aesthetic-mountains.jpg fill
output eDP-1 {
  background ~/.wallpapers/4k-minimalist-dark-aesthetic-mountains.jpg fill
}

exec nwg-panel -c config-desktop
bindsym Ctrl+Shift+k exec kanshi; exec nwg-panel -c config-desktop


set $output01 HDMI-A-1
set $output02 DP-2
set $output_default eDP-1

output $output01 mode 2560x1440 position 0,0
output $output02 mode 2560x1440 position 2560,0
output $output03 mode 1920x1080 position 5120,360

workspace 1 output $output01 $output_default
workspace 2 output $output01 $output_default
workspace 3 output $output01 $output_default
workspace 4 output $output01 $output_default

workspace 5 output $output02 $output_default
workspace 6 output $output02 $output_default
workspace 7 output $output02 $output_default
workspace 8 output $output02 $output_default

workspace 9 output $output_default
