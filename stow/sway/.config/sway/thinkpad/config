# Output configuration
set $scr_laptop_name eDP-1
set $scr_laptop_res 1920x1080

set $scr_home_01_name DP-2
set $scr_home_01_res 2560x1440
set $scr_home_02_name HDMI-A-1
set $scr_home_02_res 2560x1440


# Default outputs for workspaces

# workspaces
set $ws1   1:
set $ws2   2:
set $ws3   3:3

# Screen modes. Note mirroring is not yet properly supported by sway :(
set $mode_display AUX SCREEN: (1) Home (r) RIGHT (o) OFF (m) MIRROR
mode "$mode_display" {
    bindsym 1 workspace 1 output DP-2; workspace 2 output HDMI-A-1; workspace 3 output eDP-1;

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+x mode "$mode_display"


output * background ~/.wallpapers/coding/digital-world.jpeg fill
output eDP-1 {
  background ~/.wallpapers/coding/digital-world.jpeg fill
}
